{
    "compilerOptions": {
      "target": "es2020",
      "lib": [
        "es2020"
      ],
      "module": "NodeNext",
      "allowJs": true,
      "checkJs": true,
      "strictNullChecks": true,
      "preserveSymlinks": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationMap": true,
      "composite": true,
      "outDir": "dist",
      "esModuleInterop": true,
    },
    "include": [
      "src/**/*.js",
      "src/**/*.ts",
      "test/**/*.js",
      "test/**/*.ts",
    ],
  }